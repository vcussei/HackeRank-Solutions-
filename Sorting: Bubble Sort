// Complete the hourglassSum function below.
int hourglassSum(int arr_rows, int arr_columns, int** arr) {
    int min = -64; 
    int sum = 0; 
    for (int i = 0; i<=3; i++){
        for (int j=0; j<=3; j++){
           sum = arr[i][j] + arr[i][j+1] + arr[i][j+2]; //top part 
           sum += arr[i+1][j+1]; //middle 
           sum += arr[i+2][j] +arr[i+2][j+1] + arr[i+2][j+2]; //bottom 
           if (min<sum){
               min = sum; 
           }
        }
    }

return min; 
}
